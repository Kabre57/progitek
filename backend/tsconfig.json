{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    // "allowImportingTsExtensions": true, // <-- Comment out or set to false
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false, // <-- Should be false
    "jsx": "react-jsx",
    "outDir": "./dist", // <-- Should be present

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
